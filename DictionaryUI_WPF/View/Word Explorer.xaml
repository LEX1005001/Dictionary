<Window x:Class="MyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Word Explorer" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="themesListBox" Grid.Column="0" SelectionChanged="ThemesListBox_SelectionChanged">
            <!-- Добавьте здесь ваши темы -->
            <ListBoxItem>Тема 1</ListBoxItem>
            <ListBoxItem>Тема 2</ListBoxItem>
            <ListBoxItem>Тема 3</ListBoxItem>
        </ListBox>

        <ListView x:Name="wordsListView" Grid.Column="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Слова"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>