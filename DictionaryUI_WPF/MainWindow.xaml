    <Grid>
   
        
        <Grid Margin="20" Background="#1C2F3E">
            
            <!--Shadow-->
            <Grid.Effect>
                <DropShadowEffect
                    
                    BlurRadius="30" 
                    ShadowDepth="2"
                    Direction="-90"
                    Color="Gray">

                </DropShadowEffect>
            </Grid.Effect>
            
            <!--add stack panel-->
            <StackPanel Width="100"
                        HorizontalAlignment="Left"
                        Background="#14212B">
                
                 <!--Logo-->
                <Image x:Name="Logo"
                       Source="Images/logo1.png"
                       Stretch="None"
                       Height="100"
                       Margin="0,100,0,0">
                </Image>
                
                <!--Buttons 3 home,translations ,etc.-->
                <Button Style="{DynamicResource HomeBtnStyle}" x:Name="Home"
                        Height="100"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Margin="0,20,0,20" MouseEnter="Home_MouseEnter" MouseLeave="Home_MouseLeave">
                    
                    <!--add image-->
                    <Image Source="Images/home2.png" 
                           Stretch="None">
                        
                    </Image>
                </Button>

                <Button Style="{DynamicResource DictionaryBtnStyle}" x:Name="Dictionary"
                        Height="100"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Margin="0,0,0,10" MouseEnter="Dictionary_MouseEnter" MouseLeave="Dictionary_MouseLeave">
                    <Image Source="Images/dictionary.png"
                           Stretch="None">
                    </Image>
                </Button>

                <Button Style="{DynamicResource AddBtnStyle}" x:Name="Add"
                        Height="100"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Margin="0,10,0,0" MouseEnter="Add_MouseEnter" MouseLeave="Add_MouseLeave">
                    <Image Source="Images/add.png"
                           Stretch="None">
                    </Image>
                </Button>

                <Button Style="{DynamicResource TestBtnStyle}" x:Name="Test"
                        Height="100"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Margin="0,10,0,0" MouseEnter="Test_MouseEnter" MouseLeave="Test_MouseLeave">
                    <Image Source="Images/test.png"
                           Stretch="None">
                        
                    </Image>
                    
                </Button>
            </StackPanel>
            
            <!--Header grid-->
            <Grid Height="80"
                  VerticalAlignment="Top"
                  Background="#233C4F">
                
                <!--Title-->
                <TextBlock Text="Learn and Memorize"
                           FontFamily="none"
                           FontSize="26"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="#E0FFFF">
                </TextBlock>
                
                <!--Exit Button-->
                <Button Style="{DynamicResource ExitBtnStyle}" Height="40"
                        Width="40"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0,0,20,0" Click="Button_Click">

                    <Image x:Name="Exit"
                           Source="Images/exit.png">
                        
                    </Image>
                </Button>
            </Grid>
            
            <!--Footer-->
            <Grid Height="80"
                  VerticalAlignment="Bottom"
                  Background="#233C4F">
                
            </Grid>
            
            <!--add the popup user control-->
            <Popup x:Name="popup_uc"
                   AllowsTransparency="True"
                   HorizontalOffset="10"
                   VerticalOffset="10">

                <Grid>
                    <local:PopupUserControl x:Name="Header" Foreground="#E0FFFF"/>
                </Grid>
            </Popup>
        </Grid>

        
        
    </Grid>
    
</Window>
